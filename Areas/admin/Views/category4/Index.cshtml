@model IEnumerable<BaoMoi.Models.category4>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}

@section _Header
{

    <link href="~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

}
<h2>Most popular</h2>



<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<div id="wrapper">
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            STT
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.link)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.meta)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.hide)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.order)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.datebegin)
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{var Number = 1; }
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.Raw(Number++)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.link)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.meta)
                                        </td>
                                        <td>
                                            @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.order)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.datebegin)
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Edit","category4", new { id = item.id })" class="btn btn-secondary">
                                                <i class="fas fa-edit"></i> Sửa
                                            </a>
                                            <a href="@Url.Action("Details","category4", new { id = item.id })" class="btn btn-facebook">
                                                <i class="fas fa-info-square"></i> Chi tiết
                                            </a>
                                            <a href="@Url.Action("Delete","category4", new { id = item.id })" class="btn btn-google">
                                                <i class="fas fa-edit"></i> Xóa
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section _Footer
{
    <script src="~/Areas/admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>


    <script src="~/Areas/admin/Content/js/demo/datatables-demo.js"></script>
}
