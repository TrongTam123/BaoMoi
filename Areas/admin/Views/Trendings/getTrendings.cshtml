@using BaoMoi.Help
@model IEnumerable<BaoMoi.Models.Trending>

<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>
                    STT
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.img)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.description)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.hide)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.order)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.datebegin)
                </th>
               
                <th>
                    @Html.DisplayNameFor(model => model.title)
                </th>


                <th></th>
            </tr>
        </thead>
        <tbody>
            @{var Number = 1; }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.Raw(Number++)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <img src="~/Content/upload/img/product/@item.img" width="50px" />
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>

                    <td>
                        @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.datebegin)
                    </td>
                   
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>


                    <td>
                        <a href="@Url.Action("Edit","Trendings", new { id = item.id })" class="btn btn-secondary">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a href="@Url.Action("Details","Trendings", new { id = item.id })" class="btn btn-facebook">
                            <i class="fas fa-info-square"></i> Chi tiết
                        </a>
                        <a href="@Url.Action("Delete","Trendings", new { id = item.id })" class="btn btn-google">
                            <i class="fas fa-edit"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({
                responsive: true
            });
        });
</script>
