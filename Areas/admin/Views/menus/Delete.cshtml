@model BaoMoi.Models.menu

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="col text-center" style="background-color:red;color:white;font-style:oblique;">
                <h2>Xoá menu </h2>

            </div>

            <!-- /.panel-heading -->

            <div class="row">
                <div class="col-md-2" style="font-style:oblique" ;>
                    Tên Menu:
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.name)
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2" style="font-style:oblique" ;>
                    Link:
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.link)
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2" style="font-style:oblique" ;>
                    Meta:
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.meta)
                </div>
            </div>

            <br />
            <div class="row">
                <div class="col-md-2" style="font-style:oblique" ;>
                    Ản/Hiện
                </div>
                <div class="col-md-10">
                    @(Model.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                </div>
            </div>

            <br />
            <div class="row">
                <div class="col-md-2" style="font-style:oblique" ;>
                    Vị trí hiển thị
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.order)
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-2" style="font-style:oblique" ;>
                    Ngày viết
                </div>
                <div class="col-md-10">
                    @Html.DisplayFor(model => model.datebegin)
                </div>
            </div>
            <br />

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    
            <div class="row">
                <div class="col-md-6">
                    <div>
                        <a href="@Url.Action("Index","menus")">
                            <i class="fa fa-arrow-left" aria-hidden="true"></i>Quay lại
                        </a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-actions no-color">
                        <input style="color:red" ; type="submit" value="Delete" class="btn btn-default" /> 
       
                    </div>
                </div>
            </div>
                   
                }
            </div>
        </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
     
   
