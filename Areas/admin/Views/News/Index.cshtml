@model IEnumerable<BaoMoi.Models.News>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}
@section _Header
{

    <link href="~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

}
<h2>Banner1</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div id="wrapper">
    <div id="content-wrapper" class="d-flex flex-column">
        <div id="content">
            <div class="container-fluid">
                <div class="card shadow mb-4">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>
                                            STT
                                        </th>
                                        <th>
                                           Tên
                                        </th>
                                        <th>
                                           Hình ảnh
                                        </th>
                                       
                                      
                                       
                                        
                                        <th>
                                           Hiển thị
                                        </th>
                                        <th>
                                            Vị trí
                                        </th>
                                        <th>
                                            Ngày cập nhật
                                        </th>
                                        
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{var Number = 1; }
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            @Html.Raw(Number++)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td>
                                            <img src="~/Content/upload/img/news/@item.img" width="50px" />
                                        </td>
                                        
                                       
                                        
                                        
                                        <td>
                                            @(item.hide.GetValueOrDefault(false) ? "Hiển thị" : "Ẩn")
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.order)
                                        </td>
                                        <td>
                                            @(item.datebegin.HasValue ? item.datebegin.Value.ToString("dd/MM/yyyy") : "")
                                        </td>
                                        
                                        
                                        <td>
                                            <a href="@Url.Action("Edit","News", new { id = item.id })" class="btn btn-secondary">
                                                <i class="fas fa-edit"></i> Sửa
                                            </a>
                                            <a href="@Url.Action("Details","News", new { id = item.id })" class="btn btn-facebook">
                                                <i class="fas fa-info-square"></i> Chi tiết
                                            </a>
                                            <a href="@Url.Action("Delete","News", new { id = item.id })" class="btn btn-google">
                                                <i class="fas fa-edit"></i> Xóa
                                            </a>
                                        </td>
                                    </tr>
                                    }
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section _Footer
{
    <script src="~/Areas/admin/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Areas/admin/Content/js/demo/datatables-demo.js"></script>
}
