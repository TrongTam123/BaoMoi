
@model List<BaoMoi.Models.NewNew>

@foreach (var i in Model)
{
    if (i.categoryid1 == 3)
    {
    <div class="row pb-4">
        <div class="col-md-5">
            <div class="fh5co_hover_news_img">
                <div class="fh5co_news_img"><img src="~/Content/images/@i.img" alt="" /></div>
                <div></div>
            </div>
        </div>
        <div class="col-md-7">
            <a href="/@ViewBag.meta/@i.meta/@i.id" class="fh5co_magna py-2">
                @i.name
                <br />
            </a>
            <a href="#" class="fh5co_mini_time py-3">
                @i.description
            </a>
            <div class="fh5co_consectetur">
                @i.detail
            </div>
        </div>
    </div>
    }
}

