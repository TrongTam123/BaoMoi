@model List<BaoMoi.Models.category>

@foreach (var i in Model)
{
    if (i.id == 1)
    {
    <div>
        <div class="fh5co_heading fh5co_heading_border_bottom py-2 mb-4"><a href="@ViewBag.meta/@i.meta/">@i.name</a></div>
    </div>
    <div class="owl-carousel owl-theme js" id="slider1">
        @Html.Action("getTrending", "Default", new { id = @i.id });
    </div>
    }

}