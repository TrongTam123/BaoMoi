@model List<BaoMoi.Models.Trending>

@foreach (var i in Model)
{
    if (i.categoryid == 1)
    {
    <div class="item px-2">
        <div class="fh5co_latest_trading_img_position_relative">
            <div class="fh5co_latest_trading_img"><img src="~/Content/images/@i.img" alt="" class="fh5co_img_special_relative" /></div>
            <div class="fh5co_latest_trading_img_position_absolute"></div>
            <div class="fh5co_latest_trading_img_position_absolute_1">
                <a href="/@ViewBag.meta/@i.meta/@i.id" class="text-white"> @i.name </a>
                <div class="fh5co_latest_trading_date_and_name_color"> @i.description</div>
            </div>
        </div>
    </div>
    }
}
